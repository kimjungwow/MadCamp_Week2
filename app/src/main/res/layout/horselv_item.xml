<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight = "30dp">

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#000"
                 />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/forspeed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="  Speed : "
                android:textAlignment="center"
                android:textColor="#000"
                />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="Speed"
                android:textAlignment="center"
                android:textColor="#000"
                />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/foracceleration"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="  Acceleration : "
                android:textAlignment="center"
                android:textColor="#000"
                />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/acceleration"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="Acceleration"
                android:textAlignment="center"
                android:textColor="#000"
                 />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/formaxSpeed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="  maxSpeed : "
                android:textAlignment="center"
                android:textColor="#000"
                />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/maxSpeed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="MaxSpeed"
                android:textAlignment="center"
                android:textColor="#000"

                 />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/forfallOff"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="  fallOff : "
                android:textAlignment="center"
                android:textColor="#000"
                />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/fallOff"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="FallOff"
                android:textAlignment="center"
                android:textColor="#000"
                 />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/fordividendRate"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="  dividenRate : "
                android:textAlignment="center"
                android:textColor="#000"
                />

            <TextView
                android:fontFamily="@font/tvn"
                android:id="@+id/dividendRate"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="DividendRate"
                android:textAlignment="center"
                android:textColor="#000"
                 />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:background="@color/colorPrimary" />

</LinearLayout>